--window
--bootstrap "webview"
--package "org.learningequality.Kolibri"
--name "Kolibri"
--dist_name "kolibri"
--private "src"
--orientation sensor
--requirements python3==3.9.12,hostpython3==3.9.12,android,pyjnius,genericndkbuild,sqlite3,cryptography,twisted,attrs,bcrypt,service_identity,pyasn1,pyasn1_modules,pyopenssl,openssl,six
--android-api 30
--minsdk 21
--permission WRITE_EXTERNAL_STORAGE
--permission ACCESS_NETWORK_STATE
--permission FOREGROUND_SERVICE
--service remoteshell:remoteshell.py
--presplash assets/icon.png
--presplash-color #FFFFFF
--icon assets/icon.png
--fileprovider-paths src/fileprovider_paths.xml
--add-asset assets/_load.html:_load.html
--whitelist ./allowlist.txt
--blacklist ./blocklist.txt
